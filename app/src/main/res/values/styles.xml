<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="new_marker_nor_img_size">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">65dp</item>
    </style>

    <style name="new_marker_normal_car_img" parent="@style/new_marker_nor_img_size">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@mipmap/bg_dot_normal</item>
    </style>

    <style name="new_marker_llyt_size">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="new_marker_normal_text" parent="@style/new_marker_normal_text_default">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="new_marker_normal_text_default">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--通用item描述/说明-->
    <style name="CommonItemExplain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/common_explain</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="CommonTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/common_title</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
