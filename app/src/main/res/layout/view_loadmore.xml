<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <!-- loading -->
    <LinearLayout
        android:id="@+id/item_loadmore_container_loading"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/common_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/indeterminate_progress_library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:tint="@color/common_blue"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_loadmore_container_retry"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- 加载失败 -->

        <TextView
            android:id="@+id/item_loadmore_tv_retry"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/loadmore_error"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>